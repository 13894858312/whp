<!--pages/search/alarm/alarm.wxml-->
<view id="head">
  <view id="headText">报警</view>
</view>
<view id="infoView">
  <view class="infoItem">
    <view class="itemName">化学品名称：</view>
    <view>{{chemicalName}}</view>
  </view>
  <view class="infoItem">
    <view class="itemName">描述问题：</view>
    <input placeholder="请输入内容" value="{{alarmQuestion}}"></input>
  </view>
  <view class="infoItem">
    <view class="itemName">位置信息：</view>
    <input placeholder="坐标" style="width: 45%"></input>
    <button id="mapButton">地图</button>
  </view>
  <view class="infoItem">
    <view class="itemName">备注信息：</view>
    <textarea placeholder="请输入内容" style="height: 5em;" value="{{alarmRemark}}"></textarea>
  </view>
</view>
<view>
  <button id="submitButton" bindtap="alarmSubmit">提交</button>
</view>