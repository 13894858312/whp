/* pages/search/alarm/alarm.wxss */
#head{
  display: inline-flex;
  width: 90%;
  margin-bottom: 50rpx;
  margin-left: 5%;
  margin-right: 5%;
}

#headText{
  display: flex;
  justify-content: center;
  width: 100%;
}

#infoView{
  width: 80%;
  margin-left: 5%;
  margin-right: 5%;
  border: 1px solid black;
  padding: 5%;
  margin-bottom: 50rpx;
}

.infoItem{
  display: inline-flex;
  width: 100%;
  margin-bottom: 5%;
  font-size: 32rpx;
}

.itemName{
  width: 32%;
  display: flex;
  align-items: center;
}

input, textarea{
  border: 1px solid gainsboro;
  padding: 10rpx;
  width: 68%;
}

button{
  font-size: 32rpx;
  line-height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #476AF6;
  color: white;
}

#mapButton{
  width: 23%;
  font-size: 32rpx;
  line-height: 32px;
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}

#submitButton{
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
}