/* pages/search/detail/detail.wxss */
#detailHead{
  width: 90%;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 5%;
  margin-right: 5%;
}

#detailName{
  display: flex;
  justify-content: center;
  width: 100%;
  font-size:48rpx;
}

#infoView{
  margin-top: 20rpx;
  padding-bottom: 200rpx;
}

.chemicalItem{
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  font-size: 32rpx;
}

.itemHead{
  width: 97%;
  min-height: 72rpx;
  line-height: 72rpx;
  border-top: 1rpx solid gainsboro;
  border-left: 5rpx solid #476AF6;
  padding-left: 2%;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  margin-bottom: 10rpx;
  box-shadow: gray 0 5px 5px -5px;
}

.itemName{
  display: inline;
  font-size: 32rpx;
}

.itemInfo{
  width: 97%;
  padding-left: 2%;
  padding-top: 2%;
  padding-bottom: 2%;
}

.right{
  display: inline;
  float: right;
}

.left{
  display: inline;
}

.lineInfo{
  margin-bottom: 2%;
}

#code{
  width: 30%;
}

#navigator{
  display: inline-flex;
  position : fixed;
  bottom: 0;
  width: 100%;
  height: 10%;
  border-top: 1px solid gainsboro;
  font-size: 32rpx;
  background: white;
}

.navigatorItem{
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.navigatorImg{
  width: 15%;
  height: 45%;
  margin-right: 10rpx;
}