/* pages/search/detail/detail.wxss */
#detailHead{
  width: 90%;
  margin-bottom: 50rpx;
  margin-left: 5%;
  margin-right: 5%;
}

#detailName{
  display: flex;
  justify-content: center;
  width: 100%;
}

#infoView{
  margin-bottom: 15%;
}

.chemicalItem{
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-top: 1rpx solid gainsboro;
  font-size: 32rpx;
}

.itemHead{
  width: 100%;
}

.itemName{
  display: inline;
}

.right{
  display: inline;
  float: right;
}

.itemInfo{
  margin-top: 5%;
}

.lineInfo{
  margin-bottom: 2%;
}

#navigator{
  display: inline-flex;
  position : fixed;
  bottom: 0;
  width: 100%;
  height: 10%;
  border-top: 1px solid gainsboro;
  font-size: 32rpx;
  background: white;
}

.navigatorItem{
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.navigatorImg{
  width: 15%;
  height: 45%;
  margin-right: 10rpx;
}