<!--pages/admin/alarmDetail/alarmDetail.wxml-->
<view id="head">
  <view id="headText">报警</view>
</view>

<view id="infoView">
  <view class="infoItem">
    <view class="itemName">化学品名称：</view>
    <view>{{alarmDetail.chemicalId}}</view>
  </view>
  <view class="infoItem">
    <view class="itemName">描述问题：</view>
    <view>{{alarmDetail.remarks}}</view>
  </view>
  <view class="infoItem">
    <view class="itemName">位置信息：</view>
    <view  class="posi" style="width: 45%">{{position.longitude}}, {{position.latitude}}</view>
    <button id="mapButton" bindtap="locate">地图</button>
  </view>
  <view class="infoItem">
    <view class="itemName">备注信息：</view>
    <view>{{alarmDetail.remarks}}</view>
  </view>
</view>
