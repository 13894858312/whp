<!--pages/admin/index/index.wxml-->
<import src="/pages/common/head.wxml"/>
<template is="head" data="{{title: '系统管理'}}"/>
<view class="t" wx:if="{{!isAdmin}}">
  <form bindsubmit="adminSubmit">
    <view id="infoView">
      <view class="infoItem">
        <view class="itemName">管理员密码</view>
        <input placeholder="请输入密码" password="true" name="password"></input>
      </view>
    </view>
    <view>
      <button id="submitButton"  form-type="submit">登录</button>
    </view>
  </form>
</view>

<view wx:if="{{isAdmin}}">
  <button class="button" bindtap="goAdd">添加化学品</button>
  <button class="button" bindtap="goAlarm">报警管理</button>
</view>
